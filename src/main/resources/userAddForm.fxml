    </GridPane>
     <Button fx:id="finishButton" alignment="CENTER" contentDisplay="CENTER"
             layoutX="213.0" layoutY="242.0" mnemonicParsing="false" prefHeight="25.0"
             prefWidth="75.0" text="Finish" textAlignment="RIGHT" AnchorPane.bottomAnchor="13.0" AnchorPane.topAnchor="242.0"
